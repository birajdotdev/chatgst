{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
    "next-devtools": {
      "type": "local",
      "command": ["bunx", "-y", "next-devtools-mcp@latest"],
      "enabled": true,
    },
    "shadcn": {
      "type": "local",
      "command": ["bunx", "shadcn@latest", "mcp"],
      "enabled": true,
    },
  },
}
